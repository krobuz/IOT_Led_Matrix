<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <div class="container-fluid">
    <h1 class="text-center pt-5 mb-3">Led Matrix</h1>
    <!-- <% if (errorMessage) { %>
      <p style="color: red"><%= errorMessage %></p>
      <% } %> -->
    <div class="row">
      <div class="col"></div>
      <div class="card p-5 shadow-sm col-lg-4">
        <form id="loginForm" action="/login" method="POST">
          <div class="row mb-3">
            <label class="col-5" for="username">Username:</label>
            <input class="col" type="text" id="username" name="username" required />
          </div>
          <div class="row mb-3">
            <label class="col-5" for="password">Password:</label>
            <input class="col" type="password" id="password" name="password" required />
          </div>
          <div class="row mb-4 d-none" id="confirmPasswordRow">
            <label class="col-5" for="confirmPassword">Confirm Password:</label>
            <input class="col" type="password" id="confirmPassword" name="confirmPassword" />
          </div>
          <div class="row d-flex justify-content-end" id="confirmPasswordRow">
            <button class="btn btn-primary col-auto mx-3" type="submit" id="loginButton">Login</button>
            <button class="btn btn-danger col-auto " type="submit" id="signUpButton">Sign up</button>
          </div>
        </form>
      </div>
      <div class="col"></div>
    </div>
  </div>
</body>
<script>
  const loginButton = document.getElementById("loginButton");
  const signUpButton = document.getElementById("signUpButton");
  const confirmPasswordRow = document.getElementById("confirmPasswordRow");
  const form = document.getElementById("loginForm");

  signUpButton.addEventListener("click", () => {
    confirmPasswordRow.classList.remove("d-none");
    confirmPasswordRow.querySelector("input").setAttribute("required", "required");
    form.action = "/signup";
  });

  loginButton.addEventListener("click", () => {
    confirmPasswordRow.classList.add("d-none");
    confirmPasswordRow.querySelector("input").removeAttribute("required");
    form.action = "/login";
    form.submit();
  });
</script>

</html>